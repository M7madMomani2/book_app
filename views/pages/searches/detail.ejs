<!DOCTYPE html>
<html lang="en">
<head>
  <title>Book details</title>
  <link rel="stylesheet" href="/styles/layout.css">

</head>
<body>
  <main>
    <h2>Best Books!</h2>
    <h4>Search Result</h4>

    <div class="container">
      <% let counter =0 ; %>

      <% searchResults.forEach( book=> { %>
        <div class="card">
          <div class="imgBx">
            <img src='<%=book.img.thumbnail%>'>
          </div>
          <div class="content">
            <h4>
              <%= book.title %>
            </h4>
            <h3>
              <%= book.author %>
              <%= book.isbn %>

            </h3>
            <p>
              <%= book.description %>
            </p>
          </div>
        </div>
        <% }) %>
        
       
  
      
  
        
    </div>
  </main>
</body>
</html>
