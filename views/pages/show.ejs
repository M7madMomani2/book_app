<!DOCTYPE html>
<html lang="en">
<head>
  <title>Book Collection</title>
  <link rel="stylesheet" href="/styles/layout.css">

</head>
<body>
  <main>
    <nav>
      <ul>
        <li><a href="/">Best Books!</a></li>
        <li><a href="/">home</a></li>
        <li><a href="../searches/new">search</a></li>
      </ul>
    </nav>
    <div class="container">
      <% let counter =0 ; %>
      <% searchResults.forEach( book=> { %>
        <div class="card">
          <div class="imgBx">
            <img src='<%=book.img.thumbnail%>'>
          </div>
          <div class="content">
            <h4>
              <%= book.title %>
            </h4>
            <h3>
              <%= book.author %>
              <%= book.isbn %>

            </h3>
            <p>
              <%= book.description %>
            </p>
          </div>
          <form action="/" method="POST" >
            <input type="hidden" name="author" value= "<%= book.author %>">
            <input type="hidden" name="title" value="<%= book.title %>">
            <input type="hidden" name="isbn" value=" <%= book.isbn %>">
            <input type="hidden" name="img" value="<%=book.img.thumbnail%>">
            <input type="hidden"  name="description" value= "<%= book.description %>">
            <input  type="submit" name="submit" id="submitBtn"value="Add To Bearook ">
            </form>
        </div>
        <% }) %>
        
       
  
      
  
        
    </div>
  </main>
</body>
</html>
